{
  "compilerOptions": {
    "lib": ["DOM", "ES2022"],
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["src"]
}
